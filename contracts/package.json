{
  "name": "@mystikonetwork/governance",
  "version": "0.1.6",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "files": [
    "/contracts/**/*.sol"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mystikonetwork/mystiko-governance.git",
    "directory": "contracts"
  },
  "author": "Mystiko Network",
  "license": "MIT",
  "scripts": {
    "install": "yarn install:sol && yarn install:ts",
    "install:sol": "forge install foundry-rs/forge-std:1.8.2 Openzeppelin/openzeppelin-contracts@v5.0.0",
    "install:ts": "yarn install",
    "build": "yarn build:contract && yarn build:abi",
    "build:contract": "forge build --sizes",
    "build:abi": "cd ../abi && yarn generate",
    "test": "yarn test:forge && yarn test:unit",
    "test:forge": "forge test -vvv",
    "coverage": "forge coverage --report lcov",
    "prettier": "yarn prettier:fix",
    "prettier:check": "prettier --plugin=prettier-plugin-solidity --check \"./**/*.{ts,sol}\" --config .prettierrc",
    "prettier:fix": "prettier --plugin=prettier-plugin-solidity --write \"./**/*.{ts,sol}\" --config .prettierrc",
    "lint": "yarn lint:sol",
    "lint:ts": "eslint --ext .js,.ts .",
    "lint:sol": "solhint \"contracts/**/*.sol\""
  },
  "devDependencies": {
    "@typechain/ethers-v6": "^0.5.1",
    "@types/mocha": ">=9.1.0",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "chai": "4",
    "dotenv": "^10.0.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "ethereum-waffle": "^3.4.0",
    "ethers": "5",
    "prettier": "3.2.4",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.5.2",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.6",
    "ts-node": ">=8.0.0",
    "typechain": "^8.3.2",
    "typescript": "5.1.6"
  }
}
