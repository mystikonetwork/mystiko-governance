{
  "extends": "solhint:recommended",
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 110
      }
    ],
    "quotes": [
      "error",
      "double"
    ],
    "compiler-version": [
      "error",
      "^0.8.0"
    ],
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ]
  },
  "plugins": [
    "prettier"
  ]
}
